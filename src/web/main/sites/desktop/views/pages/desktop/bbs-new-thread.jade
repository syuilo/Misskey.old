doctype html

html(lang='ja', dir='ltr')
	head
		include ../common/head
		meta(name='keywords', content='Misskey')
		title Misskey掲示板 - スレッドを作成する
		link(rel='stylesheet', href='/resources/styles/bbs-new-thread.css')
		script(src='/resources/scripts/bbs-new-thread.js')
	
	body
		include ../common/header
		
		main(role='main')
			form#form
				h1
					i.fa.fa-pencil-square-o
					| 新しくスレッドを作成
				div.main
					label
						h2 タイトル
						input.ui-input-text(type='text', name='title', placeholder='例: 【クオリア】色について語るスレ', required)
					label
						h2 内容
						textarea.ui-textarea(name='text', placeholder='例: 皆さんはどの色が好きですか？私は青が好きです。')
					input.submit-button.ui-button(type='submit', value!='スレッドを作成する &#xf1d8;')
