doctype html

html
	head
		meta(charset='utf-8')
		meta(name='application-name', content='Misskey')
		meta(name='theme-color', content='#006f87')
		meta(name='google-site-verification', content='0KUjKH7EJj28VnWKm0p_Uo1bc6i3ldPNQOHvjxlvnm4')
		title メンテナンス中
		style.
			* {
				font-family: 'Helvetica', 'Arial', 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo UI', 'Meiryo, メイリオ', 'sans-serif';
				user-select: none;
				-moz-user-select: none;
				-webkit-user-select: none;
				-ms-user-select: none;
				cursor: default;
			}
			
			html, body {
				margin: 0;
				padding: 0;
			}
			
			html {
				overflow: hidden;
				color: #fff;
				background: #006699;
			}
			
			main {
				display: block;
				margin: 0 auto;
				padding: 0;
				width: 100%;
				text-align: center;
			}
			
			main > h1 {
				margin: 0;
				padding: 64px 16px 16px 16px;
				font-weight: normal;
				font-size: 2.5em;
			}
		
		script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script.
			function swing($elem, force) {
				var t = 1;
				var timer = setInterval(update, 10);
				function update() {
					t++;
					var pos = ((Math.sin(t / 20) * force) / ((t / 512) / 3));
					$elem.css('transform', 'perspective(1024px) rotateX(' + pos + 'deg)');
				}
			}
			$(function() {
				swing($('main'), 1);
			});

	body
		main
